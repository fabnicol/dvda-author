<?xml version="1.0"?>
<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>
  <mime-type type="application/x-lplexscript">
    <comment>lplex script</comment>
    <sub-class-of type="application/x-executable"/>
    <sub-class-of type="text/plain"/>
    <alias type="text/x-lplex"/>
    <generic-icon name="text-x-script"/>
    <magic priority="50">
      <match value="/bin/lplex" type="string" offset="1:16"/>
      <match value="#!/usr/local/bin/lplex" type="string" offset="0"/>
    </magic>
    <glob pattern="*.lplex"/>
  </mime-type>
</mime-info>

